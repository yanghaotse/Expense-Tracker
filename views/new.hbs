<div class="new-container" >
  <form action="/records/new" method="POST" id="new-form" class="need-validate-form" novalidate> 
    <table>
      <thead>
        <tr>
          <th colspan="2">
            <h2>請新增你的支出</h2>
          </th>
        </tr>
        <tr>
          <td>*必填欄位</td>
        </tr>
      </thead>
      <tbody>

        <tr class="mt-3">
          <td>
            <label for="name" class="form-label">名稱* :</label>
          </td>
          <td>
            <input type="text" id="name" name="name" class="form-control" required>
          </td>
        </tr>
        <tr>
          <td>
            <label for="date" class="form-label">日期* :</label>
          </td>
          <td>
            <input type="date" id="date" name="date" class="form-control" required>
          </td>
        </tr>
        <tr>
          <td>
            <label for="category" class="form-label">類別* :</label>
          </td>
          <td>
            <select class="form-select" aria-label="Default select example" name="category" id="category" required>
              <option selected disabled value="">請選擇類別</option>
              <option value="家居物業">家居物業</option>
              <option value="交通出行">交通出行</option>
              <option value="休閒娛樂">休閒娛樂</option>
              <option value="餐飲食品">餐飲食品</option>
              <option value="其他">其他</option>
            </select>
          </td>
        </tr>
        <tr>
          <td>
            <label for="amount" class="form-label">金額* :</label>
          </td>
          <td>
            <input type="text" id="amount" name="amount" class="form-control" required>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <button type="submit" class="btn btn-primary btn-block" id="new-button">新增支出</button>
          </td>
        </tr>
      </tbody>
    </table>
  </form>
</div>

